generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Hotel {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  title       String
  description String
  image       String?
  rooms       Room[]
}

model Room {
  id           Int      @id @default(autoincrement())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  Hotel        Hotel?   @relation(fields: [hotelId], references: [id])
  hotelId      Int?
  // parameters
  price        Int
  guests       Int
  hasWifi      Boolean
  hasParking   Boolean
  hasBar       Boolean
  hasShower    Boolean
  hasBreakfast Boolean
}

// Optional
model User {
  id    Int    @id @default(autoincrement())
  email String @unique
  name  String
}
