generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://root:root@postgres:5432/booking?schema=public"
}

model Hotel {
  id          Int           @id @default(autoincrement())
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  title       String
  rating      Float
  location    String
  description String
  rooms       Room[]
  HotelImages HotelImages[]

  @@map("hotels")
}

model HotelImages {
  id      Int    @id @default(autoincrement())
  url     String
  Hotel   Hotel  @relation(fields: [hotelId], references: [id])
  hotelId Int

  @@map("hotel_images")
}

model Room {
  id           Int          @id @default(autoincrement())
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  Hotel        Hotel?       @relation(fields: [hotelId], references: [id])
  hotelId      Int?
  // parameters
  price        Int
  guests       Int
  hasWifi      Boolean
  hasParking   Boolean
  hasBar       Boolean
  hasShower    Boolean
  hasBreakfast Boolean
  RoomImages   RoomImages[]

  @@map("rooms")
}

model RoomImages {
  id     Int    @id @default(autoincrement())
  url    String
  Room   Room   @relation(fields: [roomId], references: [id])
  roomId Int

  @@map("room_images")
}

// Optional
model User {
  id    Int    @id @default(autoincrement())
  email String @unique
  name  String
}
